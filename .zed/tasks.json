[
  {
    "label": "Build Current Project",
    "command": "scripts/build-current.sh",
    "args": ["$ZED_FILE"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "reveal": "always",
    "show_output": true
  },
  {
    "label": "Watch Current Project (SVG)",
    "command": "scripts/watch-current.sh",
    "args": ["$ZED_FILE", "svg"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "reveal": "always",
    "show_output": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "Watch Current Project (PDF)",
    "command": "scripts/watch-current.sh",
    "args": ["$ZED_FILE", "pdf"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "reveal": "always",
    "show_output": true,
    "allow_concurrent_runs": false
  }
]
