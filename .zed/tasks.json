[
  {
    "label": "Build atopile project",
    "command": "ato",
    "args": ["build"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["build"]
  },
  {
    "label": "Build and open KiCAD",
    "command": "ato",
    "args": ["build", "--open"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["build", "kicad"]
  },
  {
    "label": "Validate atopile file",
    "command": "ato",
    "args": ["validate", "${ZED_FILE}"],
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["validate"]
  },
  {
    "label": "Validate current file",
    "command": "ato",
    "args": ["validate", "${ZED_FILE}"],
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["validate", "quick"]
  },
  {
    "label": "Run linting checks",
    "command": "./scripts/lint.sh",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["lint"]
  },
  {
    "label": "Run linting with fixes",
    "command": "./scripts/lint.sh",
    "args": ["--fix"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["lint", "fix"]
  },
  {
    "label": "Start file watcher",
    "command": "./scripts/watch.sh",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "env": {},
    "tags": ["watch", "dev"]
  },
